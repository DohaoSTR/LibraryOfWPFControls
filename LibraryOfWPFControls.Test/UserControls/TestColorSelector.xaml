<UserControl x:Class="LibraryOfWPFControls.Test.UserControls.TestColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryOfWPFControls.Test.UserControls" xmlns:WPF.UI="clr-namespace:ZdfFlatUI;assembly=WPF.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <WPF.UI:ColorSelector x:Name="ColorSelector">
        </WPF.UI:ColorSelector>
        <TextBlock>
            <Run Text="颜色值：" />
            <Run Text="{Binding SelectedValue, ElementName=ColorSelector}" />
        </TextBlock>
    </StackPanel>
</UserControl>
